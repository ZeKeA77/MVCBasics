
@{
    ViewData["Title"] = "FeverCheck";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1>FeverCheck</h1>
    </div>
</div>

<div class="row">
    <div class="col-lg-12 text-center">

        <form asp-action="FeverCheck" method="post">
            <label>What is your temperature:</label><br />
            <input type="text" name="txtTemp" placeholder="37.8" /><br /><br />
            <br /><br />
            <input type="submit" value="Let's check it!" />
        </form>

    </div>

    <div class="col-lg-12">
        <br />

        @if (ViewBag.TempMessage != null)
        {
            <p>@ViewBag.TempMessage</p>
        }
   
    </div>

    </div>
