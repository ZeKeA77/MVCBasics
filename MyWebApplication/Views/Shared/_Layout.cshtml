<!DOCTYPE html>

<html>
<head lang="en">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/css/default.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
</head>
<body>
        <header>
        <nav class="navbar navbar-expand-md navbar-light navbar-fixed-top cb">
            <a asp-controller="Home" asp-action="Index" class="navbar-brand">Raul Cobos</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div class="navbar-nav">
                    <a asp-controller="Home" asp-action="Index" class="nav-item nav-link">Home</a>
                    <a asp-controller="Home" asp-action="Projects" class="nav-item nav-link">Projects</a>
                    <a asp-controller="Home" asp-action="About" class="nav-item nav-link">About</a>
                    <a asp-controller="Home" asp-action="Contact" class="nav-item nav-link">Contact</a>
                    <a asp-controller="Guess" asp-action="GuessGame" class="nav-item nav-link">Guess Game</a>
                </div>
                </div>
                </nav>
        </header>

        <div id="main" class="container">
            @RenderBody()
        </div>
    
        <footer class="footer">
            <div class="container">
                <p>&copy; Raul Cobos @DateTime.Now.ToShortDateString()</p>
            </div>
        </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
</body>
</html>
