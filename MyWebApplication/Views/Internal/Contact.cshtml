
@{
    ViewData["Title"] = "Contact";
    ViewBag.Title = "My MVC Page - Contact";
}

<div class="row">
    <div class="col-lg-12">
        <h1>Contact me</h1>
    </div>
</div>

<div class="row">
    <div class="col-lg-12 text-center">

        <form asp-action="Contact" method="post">
            <label>Your name:</label><br />
            <input type="text" name="txtName" placeholder="John Doe" /><br /><br />
            <label>Your email:</label><br />
            <input type="text" name="txtEmail" placeholder="a@b.com" /><br /><br />
            <label>Message:</label><br />
            <textarea name="txtMessage" rows="4" cols="25" placeholder="Message to me..."></textarea><br /><br />
            <input type="submit" value="Sen it to me!" />
        </form>

    </div>

    <div class="col-lg-12">
        <br />
        @if (ViewBag.MessageName != null){<p>@ViewBag.MessageName</p>}
        @if (ViewBag.MessageEmail != null){<p>@ViewBag.MessageEmail</p>}
        @if (ViewBag.Message != null){<p>@ViewBag.Message</p>}
    </div>

    <div class="col-lg-12">
        <br />
        <br />
        <br />
        <h1>Raul Cobos</h1>
        <p>
            Lilla Aggetorpsvägen 6<br />
            443 40 Gråbo<br />
            0760-128006<br />
            raul@cobos.se
        </p>

    </div>

</div>
